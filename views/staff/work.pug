    #myModalTCKH.modal
        .modal-dialog.bg-light
            .modal-content
                // Modal Header
                .modal-header
                    h4.modal-title Nhập thông tin khách hàng cần tra cứu:
                    button.close(type='button' data-dismiss='modal') &times;
                // Modal body
                .modal-body
                    form(action='/staff/work/tckh' method='get')
                        .form-group
                            label(for='value') Thông tin khách hàng:
                            input#value.form-control(name='value' type='text' placeholder='' rules='required') 
                        .form-group
                            label.form-label(for='filter') Tìm kiếm theo :
                            select#filter.form-control(name='filter')
                                option(value='MKH' selected) MKH
