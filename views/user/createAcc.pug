extends ../template/layout.pug
block css 
  link(rel='stylesheet' href='/css/acc.css')
block content 
  if errors   
    .tb
      each err in errors
        .tbC
          .alert.alert-danger= err
  else if success   
    .tb
      each succ in success
        .tbC
          .alert.alert-success= succ
  .main
    form#form-1.form(action='/user/createAcc' method='POST')
      h3.heading Thành viên đăng ký
      p.desc BEAUTY SALON - Nơi vẻ đẹp bắt đầu
      .spacer
      .form-group
        label.form-label(for='fullname') Tên đầy đủ
        input#fullname.form-control(name='fullname' type='text' placeholder='VD: Long Nguyen' rules='required|childMaxLength:7' inputNo2Space value=values?values.fullname:"")
        span.form-message
      .form-group
        label.form-label(for='sdt') Số điện thoại
        input#sdt.form-control(name='sdt' type='text' placeholder='VD: 0398.291.602' rules='required|phone' value=values?values.sdt:"" disabled )
        span.form-message
      .form-group
        label.form-label(for='gender') Giới tính:
        select#gender(name='gender')
          option(value='Nam'  ) Nam
          option(value='Nữ') Nữ
          option(value='Khác') Khác
      .form-group
        label.form-label(for='account') Tài khoản
        input#account.form-control(name='account' type='text' placeholder='VD: LongProNo1' rules='required|minLength:6|maxLength:12' inputNoSpace value=values?values.account:"" )
        span.form-message
      .form-group
        label.form-label(for='password') Mật khẩu
        input#password.form-control(name='password' type='password' placeholder='Nhập mật khẩu mới' rules='required|minLength:6|maxLength:12' inputNoSpace value=values?values.password:"")
        span.form-message
      .form-group
        label.form-label(for='password_confirmation') Nhập lại mật khẩu
        input.form-control(id='password_confirmation' name='password_confirmation' placeholder='Nhập lại mật khẩu' type='password' rules='required|minLength:6|maxLength:12|equal:#password' inputNoSpace value=values?values.password_confirmation:"")
        span.form-message
      
      button.form-submit.btn.btn-primary(type='submit') Đăng ký
  
  script(src='/js/validator.js')
  script.
    validator('#form-1',{valiCode:1}
    )
  
